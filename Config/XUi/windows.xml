                    <fpsHUD_toolbelt_interface name="0"/>
                </grid>

                <grid name="fpsHUDtoolbeltNumbers" depth="1" pos="-332,-43" rows="1" cols="10" cell_width="90" cell_height="60" repeat_content="false">
                    <label name="fpsHUDtbNumber1" depth="10" size="17,22" text="1" font_size="17" color="white" crispness="Never" effect="outline" effect_distance="1,1" justify="center"/>
